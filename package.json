{
  "name": "@halibegic/react-video-player",
  "description": "A React video player library with HLS support for VOD and Live streaming",
  "version": "0.0.35",
  "license": "MIT",
  "keywords": [
    "react",
    "video-player",
    "hls",
    "hls.js",
    "video-player",
    "streaming",
    "vod",
    "live"
  ],
  "homepage": "https://github.com/halibegic/react-video-player#readme",
  "author": "halibegic",
  "bugs": {
    "url": "https://github.com/halibegic/react-video-player/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halibegic/react-video-player.git"
  },
  "type": "module",
  "main": "./dist/react-video-player.umd.js",
  "module": "./dist/react-video-player.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-video-player.es.js",
      "require": "./dist/react-video-player.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --config vite.lib.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slider": "^1.3.6",
    "hls.js": "^1.6.15",
    "mitt": "^3.0.1",
    "promise-polyfill": "8.3.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/hls.js": "^1.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
