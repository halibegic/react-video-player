{
  "name": "@halibegic/react-video-player",
  "description": "A React video player library with HLS support for VOD and Live streaming",
  "version": "0.0.5",
  "license": "MIT",
  "keywords": [
    "react",
    "video-player",
    "hls",
    "hls.js",
    "video-player",
    "streaming",
    "vod",
    "live"
  ],
  "homepage": "https://github.com/halibegic/react-video-player#readme",
  "author": "halibegic",
  "bugs": {
    "url": "https://github.com/halibegic/react-video-player/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halibegic/react-video-player.git"
  },
  "type": "module",
  "main": "./dist/react-video-player.umd.js",
  "module": "./dist/react-video-player.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-video-player.es.js",
      "require": "./dist/react-video-player.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build --config vite.lib.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/styled-components": "^5.1.34",
    "hls.js": "^1.6.11",
    "styled-components": "^6.1.19",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/hls.js": "^0.13.3",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
